{
  "manifest_version": 3,
  "name": "Melvor Idle AutoLoot",
  "version": "1.0",
  "description": "Melvor Idle auto loot every 30 seconds",
  "content_scripts": [
    {
      "matches": [
        "https://melvoridle.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    },
    "default_title": "Melvor Idle AutoLoot",
    "default_popup": "popup.html"
  }
}